{
	"name": "Project2_Commerce_devContainer",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "zsh",
				"terminal.integrated.profiles.linux": {
					"zsh": { "path": "/bin/zsh" }
				}
			},
			"extensions": [
				"ms-python.python", 
				"batisteo.vscode-django",
				"ms-python.vscode-pylance"
			]
		}
	},
	"workspaceFolder": "/workspace",
	"mounts": [
		"source=project2_commerce_CS50W,target=/workspace/project2_commerce,type=volume"
	],
	"forwardPorts": [8000],
	"remoteEnv": {
		"DJANGO_SETTINGS_MODULE": "commerce.settings",
		"DEBUG": "True"
	},
	"postCreateCommand": "python manage.py migrate",
	"postStartCommand": "zsh",
	"updateContentCommand": "python manage.py migrate"
}
