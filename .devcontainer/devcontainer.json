{
  "name": "Django Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "Dockerfile": "../Dockerfile",
  "service": "web",
  "workspaceFolder": "/app",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/env/bin/python"
      }
    }
  },
  "extensions": [
    "ms-python.python"
  ],
  "postCreateCommand": "pip install -r requirements.txt"
}
